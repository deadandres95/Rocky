@model IEnumerable<Rocky.Models.Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">
                Category list
            </h2>
        </div>
        <div class="col-6">
            <a asp-action="Create" asp-controller="Category" class="btn btn-success text-right">
                Create new category
            </a>
        </div>
    </div>
    <br />
    <br />
    @if(Model.Count() > 0) { 
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category name
                    </th>
                    <th>
                        Display order
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach(var obj in Model)
                {
                <tr>
                    <td width="50%">
                        @obj.CategoryName
                    </td>
                    <td width="30%">
                        @obj.DisplayOrder
                    </td>
                    <td width="20%" class="text-center">
                        <a asp-action="Edit" asp-route-id="@obj.CategoryId" class="btn btn-primary">
                            Edit
                        </a>
                        <a asp-action="Delete" asp-route-id="@obj.CategoryId" class="btn btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No categories exists</p>
    }
</div>