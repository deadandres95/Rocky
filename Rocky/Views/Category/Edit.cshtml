@model Rocky.Models.Category

<form method="post" asp-action="Edit">
    <input asp-for="CategoryId" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">
                Edit category
            </h2>
        </div>
        <div class="row">
            <div class="form-group col-12">
                <div class="col-4">
                    <label asp-for="CategoryName">
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="CategoryName" />
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="form-group col-12">
                <div class="col-4">
                    <label asp-for="DisplayOrder">
                    </label>
                </div>
                <div class="col-8">
                    <input asp-for="DisplayOrder" />
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-success" type="submit">
                    Update
                </button>
                <a asp-action="Index" asp-controller="Category" class="btn btn-danger">
                    Go back
                </a>
            </div>
        </div>
    </div>
</form>

@section scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
